<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PetaversePortal.Models"
             xmlns:contentViews="clr-namespace:PetaversePortal.ContentViews"
             xmlns:vm="clr-namespace:PetaversePortal.ViewModels"
             x:Class="PetaversePortal.Pages.MainPage" 
             x:DataType="vm:ViewModelBase"
             Title="MainPage">
    <ContentPage.Resources>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="Welcome to Petaverse!!" HorizontalOptions="Center"/>
        <ActivityIndicator IsRunning="{Binding IsRunning}" 
                           WidthRequest="30" 
                           HeightRequest="30" 
                           Color="{StaticResource Primary}"/>
        <Image Source="dotnet_bot.png" HeightRequest="300" WidthRequest="300"/>
    </VerticalStackLayout>
</ContentPage>
