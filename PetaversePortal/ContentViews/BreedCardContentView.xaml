<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PetaversePortal.Models"
             x:Class="PetaversePortal.ContentViews.BreedCardContentView"
             x:DataType="model:BreedDTO">
    <VerticalStackLayout>
        <Image Source="{x:Binding ImageUrl, Mode=OneWay}"
               HeightRequest="400" WidthRequest="200"/>
        <Label Text="{x:Binding BreedName}"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentView>
